{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": false,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "declaration": true,
    "sourceRoot": "src",
    "outDir": "dist",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "lib": [
      "es2018"
    ],
    "paths": {
      "@pit/model/*": ["./src/models/*.model"],
      "@pit/service/*": ["./src/services/*.service"],
      "@pit/router/*": ["./src/routers/*.router"],
      "@pit/middleware/*": ["./src/middleware/*.middleware"],
      "@pit/validator/*": ["./src/validators/*.validator"],
      "@pit/cors/*": ["./src/cors/*.policy"],
      "@singular/core": ["../../dist/core"]
    }
  }
}
