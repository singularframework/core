{
  "name": "@singular/core",
  "version": "1.0.0-alpha1",
  "description": "Singular framework core module",
  "main": "dist/core.js",
  "scripts": {
    "postinstall": "(cd ./node_modules/@singular/common && npm install && npm start) || echo \"Post install failed!\"",
    "start": "./node_modules/typescript/bin/tsc --build",
    "docs": "./node_modules/typedoc/bin/typedoc --out docs src",
    "test": "./node_modules/typescript/bin/tsc -p test/tsconfig.json && ./node_modules/mocha/bin/mocha ./test/dist/main.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/singularframework/core.git"
  },
  "keywords": [
    "singular",
    "framework",
    "nodejs",
    "node",
    "typescript",
    "backend",
    "server",
    "express",
    "http",
    "validation"
  ],
  "author": "Ramtin Soltani <ramtin@chiselpowered.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/singularframework/core/issues"
  },
  "homepage": "https://github.com/singularframework/core#readme",
  "dependencies": {
    "@singular/common": "github:singularframework/common#v1.0.0-alpha.4",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "lodash": "^4.17.20",
    "luxon": "^1.25.0",
    "source-map-support": "^0.5.19",
    "strip-ansi": "^6.0.0",
    "tsconfig-paths": "^3.9.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.12",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/fs-extra": "^9.0.1",
    "@types/lodash": "^4.14.161",
    "@types/luxon": "^1.24.4",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.0",
    "@types/source-map-support": "^0.5.3",
    "chai": "^4.2.0",
    "mocha": "^8.1.2",
    "typedoc": "^0.18.0",
    "typescript": "^4.0.2"
  }
}
